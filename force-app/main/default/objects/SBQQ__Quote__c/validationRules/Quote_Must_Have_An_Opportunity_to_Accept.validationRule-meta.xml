<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Quote_Must_Have_An_Opportunity_to_Accept</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(SBQQ__Status__c, &quot;Accepted&quot;),
ISBLANK(SBQQ__Opportunity2__c)
)</errorConditionFormula>
    <errorMessage>Quote must have an opportunity to move the status to Accepted</errorMessage>
</ValidationRule>
